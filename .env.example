# ==============================================================================
# CONFIGURACIÓN PARA PRODUCCIÓN EN CPANEL
# ==============================================================================
# Copia este archivo como .env y ajusta los valores según tu hosting cPanel
# ==============================================================================

# APLICACIÓN
APP_NAME="Shalom ERP"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tudominio.com

# LOCALIZACIÓN
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# LOGS
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# BASE DE DATOS (MySQL en cPanel)
# Obtén estos datos del panel de control de tu hosting
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tuusuario_shalom_erp
DB_USERNAME=tuusuario_shalom
DB_PASSWORD=tu_password_seguro

# SESIONES
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# CACHÉ
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# CORREO ELECTRÓNICO (configuración SMTP de cPanel)
# Obtén estos datos de la configuración de correo de tu cPanel
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mail.tudominio.com
MAIL_PORT=587
MAIL_USERNAME=noreply@tudominio.com
MAIL_PASSWORD=tu_password_correo
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (opcional - solo si usas servicios AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# VITE
VITE_APP_NAME="${APP_NAME}"

# ==============================================================================
# CONFIGURACIONES ADICIONALES PARA CPANEL
# ==============================================================================

# TIMEZONE (ajustar según tu ubicación)
APP_TIMEZONE="America/Mexico_City"

# CONFIGURACIÓN DE ARCHIVOS
# Máximo tamaño de archivo para uploads (en KB)
UPLOAD_MAX_FILESIZE=10240

# CONFIGURACIÓN DE SEGURIDAD
# Cambiar en producción - generar nueva clave
ADMIN_PASSWORD_HASH=

# CONFIGURACIÓN DE WHATSAPP (si se usa)
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# ==============================================================================
# NOTAS IMPORTANTES PARA CPANEL:
# ==============================================================================
# 1. APP_KEY: Genera con: php artisan key:generate
# 2. APP_URL: Cambia por tu dominio real (https://tudominio.com)
# 3. DB_*: Obtén los datos desde cPanel > Bases de datos MySQL
# 4. MAIL_*: Configura desde cPanel > Cuentas de correo
# 5. APP_DEBUG: SIEMPRE false en producción
# 6. APP_ENV: SIEMPRE production en servidor en vivo
# ==============================================================================
